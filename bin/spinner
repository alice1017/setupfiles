#!/bin/bash
# =====================================================
# This program downloaded from following repository.
# https://github.com/ringohub/sh-spinner
# copyright (c) ringohub all rights reserved.
# -----------------------------------------------------
# I didn't edit anything in this script except this
# copyright sentence.
# =====================================================

# Load library
source "$HOME/setupscripts/lib/load.sh"

tput civis

# Clear Line
CL="\e[2K"

# Spinner Character
SPINNER="⠋⠙⠹⠸⠼⠴⠦⠧⠇⠏"

# color letters
check="$(ink "cyan" "✓")"

function spinner() {
  task=$1
  msg=$2
  while :; do
    jobs %1 > /dev/null 2>&1
    [ $? = 0 ] || {
      printf "${CL}${check} ${task} done.\n"
      break
    }
    for (( i=0; i<${#SPINNER}; i++ )); do
      sleep 0.05
      printf "${CL}${SPINNER:$i:1} ${task} ${msg}\r"
    done
  done
}

msg="${2-InProgress}"
task="${3-$1}"
$1 & spinner "$task" "$msg"

tput cnorm
